{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "importHelpers": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["build"],
}
